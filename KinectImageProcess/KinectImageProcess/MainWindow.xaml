<Window x:Class="KinectImageProcess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None">
    <Viewbox Stretch="Fill">
        <Grid>
            <Canvas Name="ImageLayer" Height="1080" Width="1920" Background="Black">
                <Image Width="640" Height="480" HorizontalAlignment="Left" Name="GreenScreenImage" Stretch="Fill" VerticalAlignment="Top"  Canvas.Left="20" Canvas.Top="20" Visibility="Hidden"/>
            </Canvas>
            <Canvas Height="1080" Width="1920" >
            <Image Name="PNGPlayerElement" Stretch="Fill" Height="1080" Width="1920" Canvas.Top="100"></Image>
            </Canvas>
        </Grid>
    </Viewbox>
</Window>
